{
  "name": "@monobase/api",
  "version": "0.1.0",
  "description": "Monobase Application Platform API Service",
  "type": "module",
  "scripts": {
    "dev": "bun src/index.ts",
    "dev:deps:up": "docker compose -f docker-compose.deps.yml up -d --wait",
    "dev:deps:down": "docker compose -f docker-compose.deps.yml down -v",
    "build": "bun build --compile --minify --sourcemap --external ajv --external ajv-draft-04 src/index.ts --outfile dist/server",
    "generate": "bun scripts/generate.ts",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "test": "bun test",
    "test:unit": "bun test src/**/*.test.ts",
    "test:e2e": "bun test tests/e2e",
    "test:perf": "bun test tests/perf",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/s3-request-presigner": "^3.879.0",
    "@hono/zod-openapi": "^0.18.0",
    "@hono/zod-validator": "^0.4.0",
    "@monobase/api-spec": "workspace:*",
    "@onesignal/node-onesignal": "^5.2.1-beta1",
    "@scalar/hono-api-reference": "^0.9.16",
    "@vvo/tzdb": "^6.186.0",
    "better-auth": "^1.3.27",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "drizzle-orm": "^0.44.6",
    "handlebars": "^4.7.8",
    "hono": "^4.0.0",
    "i18n-iso-countries": "^7.14.0",
    "iso-639-1": "^3.1.5",
    "libphonenumber-js": "^1.12.24",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "pg-boss": "^10.3.2",
    "pino": "^9.0.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "postmark": "^4.0.5",
    "stripe": "^19.1.0",
    "uuid": "^11.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@monobase/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "@types/handlebars": "^4.1.0",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.28.0",
    "eslint": "^9.0.0",
    "msw": "^2.11.3",
    "nanoid": "^5.1.6",
    "typescript": "^5.7.0",
    "ws": "^8.18.3"
  }
}
